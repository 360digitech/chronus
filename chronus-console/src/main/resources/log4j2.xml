<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN" shutdownHook="disable">
    <Properties>
        <Property name="sysName">chronus-console</Property>
        <Property name="bizLogLevel">${env.log4j2.biz.level}</Property>
        <Property name="otherLogLevel">${env.log4j2.other.level}</Property>
        <Property name="logFilePath">${env.log4j2.log.path}</Property>
        <Property name="errorLogFile">${sysName}_err</Property>
        <Property name="bizLogFile">${sysName}_biz</Property>
        <Property name="allLogFile">${sysName}_all</Property>
        <Property name="monitorLogFile">${sysName}_monitor</Property>
        <Property name="ioLogFile">${sysName}_io</Property>
        <Property name="maxFile">100</Property>
        <Property name="logSize">1024 MB</Property>
    </Properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="${env.log4j2.biz.level}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="UTF-8"
                           pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%X{requestNo}|%X{consumerIp}|%X{sysCode}] [%c:%line] - %msg%n"/>
        </Console>

        <RollingFile name="TaskCfgErrorRollingFile" fileName="${logFilePath}/task-log-factory_err.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/task-log-factory_err-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout charset="UTF-8" pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%X{requestNo}|%X{sysCode}|%X{beanName}] [%c:%line] - %msg%n"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>
        <RollingFile name="TaskCfgBizRollingFile" fileName="${logFilePath}/task-log-factory_biz.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/task-log-factory_biz-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout charset="UTF-8"  pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%X{requestNo}|%X{sysCode}|%X{beanName}] [%c:%line] - %msg%n"/>
            <Filters>
                <ThresholdFilter level="${bizLogLevel}"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>

        <RollingFile name="TaskCfgMonitorRollingFile" fileName="${logFilePath}/task-log-factory_monitor.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/task-log-factory_monitor-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|%msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>

        <RollingFile name="ErrorRollingFile" fileName="${logFilePath}/${errorLogFile}.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/${errorLogFile}-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout charset="UTF-8" pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%X{requestNo}|%X{consumerIp}] [%c:%line] - %msg%n"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>
        <RollingFile name="BizRollingFile" fileName="${logFilePath}/${bizLogFile}.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/${bizLogFile}-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%X{requestNo}|%X{consumerIp}] [%c:%line] - %msg%n"/>
            <Filters>
                <ThresholdFilter level="${bizLogLevel}"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>

        <RollingFile name="AllRollingFile" fileName="${logFilePath}/${allLogFile}.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/${allLogFile}-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%X{requestNo}|%X{consumerIp}] [%c:%line] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>
        <RollingFile name="MonitorRollingFile" fileName="${logFilePath}/${monitorLogFile}.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/${monitorLogFile}-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|%msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>
        <RollingFile name="IORollingFile" fileName="${logFilePath}/${ioLogFile}.log"
                     filePattern="${logFilePath}/$${date:yyyy-MM}/${ioLogFile}-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%t] [%X{requestNo}|%X{consumerIp}] [%c:%line] - %msg%n"/>
            <Filters>
                <ThresholdFilter level="${bizLogLevel}"/>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${logSize}"/>
            </Policies>
            <DefaultRolloverStrategy max="${maxFile}"/>
        </RollingFile>
    </appenders>
    <loggers>
        <logger name="net.sf.ehcache.store.disk.Segment" level="INFO" additivity="false">
            <appender-ref ref="AllRollingFile"/>
            <appender-ref ref="Console"/>
        </logger>
        <logger name="com.qihoo.finance.chronus" level="${bizLogLevel}" additivity="false">
            <appender-ref ref="ErrorRollingFile" />
            <appender-ref ref="BizRollingFile"/>
            <appender-ref ref="Console"/>
        </logger>
        <root level="${otherLogLevel}">
            <appender-ref ref="AllRollingFile"/>
            <appender-ref ref="ErrorRollingFile"/>
            <appender-ref ref="Console"/>
        </root>
    </loggers>
</configuration>